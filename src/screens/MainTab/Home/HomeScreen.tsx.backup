  const getGreeting = () => {
    const hour = new Date().getHours();
    const isNewUser = false; // TODO: Check if user joined within last 7 days
    
    if (isNewUser) {
      return 'Welcome';
    }
    
    // Time-based greetings
    if (hour >= 5 && hour < 12) {
      return 'Good morning';
    } else if (hour >= 12 && hour < 17) {
      return 'Good afternoon';
    } else if (hour >= 17 && hour < 22) {
      return 'Good evening';
    } else {
      return 'Hi there';
    }
  };

